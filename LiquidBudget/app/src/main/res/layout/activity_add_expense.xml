<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentLight"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".AddExpenseActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/assistant_semibold"
        android:text="@string/addingExpense"
        android:textColor="@color/colorAccentDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/exp_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ExpenseName"
        android:inputType="text" />

    <EditText
        android:id="@+id/exp_cat_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/category"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/category_spinner_expense"
        android:layout_width="208dp"
        android:layout_height="45dp" />

    <EditText
        android:id="@+id/exp_amount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/exp_date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/date"/>

    <Button
        android:id="@+id/exp_button_save"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:backgroundTint="@color/colorAccentDark"
        android:fontFamily="@font/assistant_semibold"
        android:text="@string/finish"
        android:textColor="@color/white" />


</LinearLayout>