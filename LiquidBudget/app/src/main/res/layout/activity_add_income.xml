<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentLight"
    android:foregroundTint="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".AddIncomeActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/assistant_semibold"
        android:text="@string/addingIncome"
        android:textColor="@color/colorAccentDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inc_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/IncomeName"
        android:inputType="text" />

    <Spinner
        android:id="@+id/category_spinner_income"
        android:layout_width="208dp"
        android:layout_height="45dp"
        android:layout_gravity="left"/>

    <EditText
        android:id="@+id/inc_amount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inc_date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/date"/>

    <Button
        android:id="@+id/inc_button_save"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:backgroundTint="@color/colorAccentDark"
        android:fontFamily="@font/assistant_semibold"
        android:text="@string/finish"
        android:textColor="@color/white" />


</LinearLayout>